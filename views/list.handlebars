<footer>
<div class="members">
	<div class="coming">
		<h1>{{COMING}}</h1>
		<h2>Coming</h2>
		<hr>
		<ul>
		{{#each coming}}
				<li>
					<h3><a class="hidden-link" href="/?token={{unique_email_id}}&email={{email_address}}"><i class="fa fa-check"></i> {{merge_fields.NAME}}</a></h3>
					<p>{{merge_fields.DIETARY}}</p>
				</li>
		{{/each}}
		</ul>
	</div>
	<div class="not_coming">
		<h1>{{NOT_COMING}}</h1>
		<h2>Not Coming</h2>
		<hr>
		<ul>
		{{#each not_coming}}
				<li>
					<h3><a class="hidden-link" href="/?token={{unique_email_id}}&email={{email_address}}"><i class="fa fa-close"></i> {{merge_fields.NAME}}</a></h3>
					<p>{{merge_fields.DIETARY}}</p>
				</li>
		{{/each}}
		</ul>
	</div>
	<div class="waiting">
		<h1>{{WAITING}}</h1>
		<h2>Waiting</h2>
		<hr>
		<ul>
		{{#each waiting}}
				<li>
					<h3><a class="hidden-link" href="/?token={{unique_email_id}}&email={{email_address}}"><i class="fa fa-clock-o"></i> {{merge_fields.NAME}}</a></h3>
					<p>{{merge_fields.DIETARY}}</p>
				</li>
		{{/each}}
		</ul>
	</div>
</footer>
